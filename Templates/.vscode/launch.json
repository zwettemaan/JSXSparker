{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extendscript-debug",
            "request": "launch",
            "name": "$$TARGET_NAME$$",
$if "$$TARGET_APP_FULL_SPECIFIER$$" != ""
            "hostAppSpecifier": "$$TARGET_APP_FULL_SPECIFIER$$",
$endif            
$if "$$USE_PERSISTENT_ENGINE$$" != "ON"
$if "$$TARGET_APP$$" == "Premiere Pro"
            "engineName": "NewWorld",
$elif "$$TARGET_APP$$" == "Bridge"
            "engineName": "MainEngine",
$elif "$$TARGET_APP$$" == "Adobe Media Encoder"
            "engineName": "NewWorld",
$else
            "engineName": "main",
$endif            
$else
$if "$$TARGET_APP$$" == "InDesign"
            "engineName": "$$SHORTCODE$$_Engine",
$elif "$$TARGET_APP$$" == "InCopy"
            "engineName": "$$SHORTCODE$$_Engine",
$elif "$$TARGET_APP$$" == "Premiere Pro"
            "engineName": "NewWorld",
$elif "$$TARGET_APP$$" == "Bridge"
            "engineName": "MainEngine",
$elif "$$TARGET_APP$$" == "Adobe Media Encoder"
            "engineName": "NewWorld",
$else
            "engineName": "main",
$endif            
$endif
            "script": "${workspaceFolder}/$$DESPACED_TARGET_NAME$$.$$TARGET_FILENAME_EXTENSION$$"
        }
    ]
}
